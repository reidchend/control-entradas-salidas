# Configuración de Base de Datos
# Tipo: sqlite o postgresql
DB_TYPE=postgresql

# Configuración SQLite (usar cuando DB_TYPE=sqlite)
SQLITE_PATH=./control_entradas_salidas.db

# Configuración PostgreSQL (usar cuando DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=control_entradas_salidas
DB_USER=postgres
DB_PASSWORD=tu_contraseña

# Configuración de la Aplicación
SECRET_KEY=tu_clave_secreta_aqui_cambia_esto_en_produccion
DEBUG=True

# Configuración de Flet
FLET_WEB_PORT=8501
FLET_WEB_HOST=0.0.0.0

# Configuración de Archivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760